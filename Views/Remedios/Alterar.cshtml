@model Remedios
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Alteração";
}
<h1>@ViewData["Title"]</h1>

<p class="text-danger">@ViewData["mensagem"]</p>

<form method="post" asp-action="Alterar">

    <p>
        <label asp-for="Nome">Nome</label>
        <input asp-for="Nome">
    </p>

    <p>
        <label asp-for="Posso">Posso beber?</label>        
        <select asp-for="Posso">
            <option value="Sim">Sim</option>
            <option value="Nao">Não</option>            
        </select>
    </p>

    <p>
        <label asp-for="Descricao">Descrição</label>
        <input asp-for="Descricao">
    </p>    
    
    <input asp-for="Usuario" value=@Context.Session.GetInt32("IdUsuario") type="hidden">
    <p>
        <input asp-for="Id" type="hidden">
        <input class="btn btn-primary" type="submit" value="Alterar">
    </p>

</form>