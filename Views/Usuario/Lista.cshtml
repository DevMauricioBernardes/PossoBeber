@model List<Usuario>
@{
    ViewData["Title"] = "Lista";
    }

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Login</th>
                <th>Senha</th>                
                <th>Operações</th>
            </tr>
        </thead>            
        <tbody>
            @foreach (Usuario u in Model)
            {
                <tr>
                    <td>@u.Id</td>
                    <td>@u.Nome</td>
                    <td>@u.Email</td>
                    <td>@u.Login</td>
                    <td>@u.Senha</td>                    
                    <td>
                        <a class="btn btn-warning" href="/Usuario/Alterar?Id=@u.Id">Alterar</a> |
                        <a class="btn btn-danger" href="/Usuario/Excluir?Id=@u.Id">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>    
    </table>