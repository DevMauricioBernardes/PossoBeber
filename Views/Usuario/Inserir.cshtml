@model Usuario
@{
    ViewData["Title"] = "Cadastro";
}
<div class="cadastro">
    <h1>@ViewData["Title"]</h1>

    <p class="text-danger">@ViewData["mensagem"]</p>

    <form method="post" asp-action="Inserir" name="cadastro" onsubmit="return valida_cadastro(this);">

        <p>
            <label asp-for="Nome">Nome</label>            
            <input asp-for="Nome">
            <span class="msg-erro msg-nome"></span>
        </p>

        <p>
            <label asp-for="Email">E-mail</label>            
            <input asp-for="Email">
            <span class="msg-erro msg-email"></span>
        </p>

        <p>
            <label asp-for="Login">Login</label>
            <input asp-for="Login">
            <span class="msg-erro msg-login"></span>
        </p>

        <p>
            <label asp-for="Senha">Senha</label>            
            <input asp-for="Senha">
            <span class="msg-erro msg-senha"></span>
        </p>  

        <p>
            <input type="submit" value="Cadastrar">
        </p>

    </form>
</div>  

<script type="text/javascript" src="/js/site.js"></script>